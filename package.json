{
  "name": "jeopardybot",
  "version": "0.10.0",
  "description": "A Slack bot that lets you play Jeopardy games.",
  "main": "lib/index.js",
  "private": true,
  "scripts": {
    "postinstall": "npm run build",
    "fonts:linux": "cp ./.fonts/*.ttf /usr/share/fonts/fontfiles && sudo fc-cache -fv",
    "fonts:osx": "cp ./.fonts/*.ttf /Library/Fonts/",
    "build": "babel src --out-dir lib --copy-files && npm run admin",
    "watch": "npm run watch:build & npm run watch:browserify",
    "watch:build": "babel --watch src --out-dir lib --copy-files",
    "watch:browserify": "watchify lib/admin/index.js --outfile lib/admin/index.bundle.js -d",
    "admin": "npm run admin:browserify",
    "admin:browserify": "browserify lib/admin/index.js --outfile lib/admin/index.bundle.js",
    "start": "node lib/index",
    "start:heroku": "node --optimize_for_size --max_old_space_size=460 --gc_interval=100 lib/index",
    "dev": "nodemon --ignore lib/ --exec babel-node src/index",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src"
  },
  "author": "Jordan Gensler <jordangens@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "async": "^1.5.0",
    "babel": "^5.8.23",
    "babel-runtime": "^5.8.25",
    "basic-auth-connect": "^1.0.0",
    "body-parser": "^1.14.1",
    "browserify": "^12.0.1",
    "canvas": "^1.3.5",
    "cheerio": "^0.19.0",
    "dehumanize-date": "^2.1.0",
    "express": "^4.13.3",
    "express-restify-mongoose": "^2.3.1",
    "find-remove": "^0.2.8",
    "form-data": "^0.2.0",
    "history": "^1.17.0",
    "html-entities": "^1.2.0",
    "imgur": "^0.1.6",
    "lockfile": "^1.0.1",
    "moment": "^2.10.6",
    "mongoose": "^4.1.9",
    "natural": "^0.2.1",
    "node-fetch": "^1.3.3",
    "numeral": "^1.5.3",
    "public-ip": "^1.1.0",
    "react": "^0.14.3",
    "react-dom": "^0.14.3",
    "react-mdl": "^1.0.2",
    "react-router": "^1.0.3",
    "require-dir": "^0.3.0",
    "slack-client": "^1.5.1",
    "string-to-number": "^0.1.1",
    "striptags": "^2.0.3",
    "unidecode": "^0.1.7",
    "winston": "^2.1.1"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^4.1.6",
    "eslint": "^1.6.0",
    "eslint-config-airbnb": "^3.1.0",
    "eslint-plugin-babel": "^3.0.0",
    "eslint-plugin-react": "^3.14.0",
    "nodemon": "^1.7.1",
    "watchify": "^3.6.1"
  }
}
